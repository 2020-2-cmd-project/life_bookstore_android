<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@color/splashColor">

    <ImageView
        android:id="@+id/splash_icon"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="100dp"
        app:srcCompat="@drawable/splash_icon" />

    <ImageView
        android:id="@+id/splash_title"
        android:layout_width="match_parent"
        android:layout_height="54.6dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/splash_icon"
        android:layout_marginTop="18.6dp"
        app:srcCompat="@drawable/splash_title" />

    <ImageView
        android:id="@+id/splash_subtitle"
        android:layout_width="match_parent"
        android:layout_height="34.6dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_title"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/splash_subtitle" />


</androidx.constraintlayout.widget.ConstraintLayout>